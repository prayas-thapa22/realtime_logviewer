#!/bin/sh
echo "Running client lint..."
cd client && npm install > /dev/null 2>&1
npm run lint || { echo "Client lint failed. Commit aborted."; exit 1; }
cd ..

echo "Running server lint..."
cd server && npm install > /dev/null 2>&1
npm run lint || { echo "Server lint failed. Commit aborted."; exit 1; }
cd ..

echo "Pre-commit checks passed."